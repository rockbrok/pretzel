{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "text",
      "required": true
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "origin": {
      "type": "string",
      "required": true
    },
    "price": {
      "required": true,
      "type": "decimal"
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "southamerica": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::southamerica.southamerica",
      "inversedBy": "products"
    },
    "asia": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::asia.asia",
      "inversedBy": "products"
    },
    "africa": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::africa.africa",
      "inversedBy": "products"
    },
    "roast": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 4
    }
  }
}
